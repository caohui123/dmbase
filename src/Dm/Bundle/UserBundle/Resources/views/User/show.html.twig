{% extends 'DmThemeBundle::layout.html.twig' %}

{% block breabcrumb %}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <a href="{{ path('dashboard')}}">控制台</a>
        </li>
        <li><i class="fa fa-angle-right"></i></li>
        <li>
            <a href="{{ path('user')}}">用户管理</a>
        </li>
        <li><i class="fa fa-angle-right"></i></li>
        <li>
            <span>用户查看</span>
        </li>
    </ul>
</div>
{% endblock %}

{% block content_wrapper -%}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-docs font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">用户查看</span>
                </div>
                <div class="actions">
                    <a href="{{ path('user') }}" class="btn btn-sm green"><i class="fa fa-reply"></i> 返回用户列表</a>
                    <a href="{{ path('user_edit', {id: entity.id}) }}" class="btn btn-sm default"><i class="fa fa-edit"></i> 编辑</a>
                    <a href="javascript:;" class="btn btn-sm red delete-link" data-did="{{ entity.id }}"><i class="fa fa-trash-o"></i> 删除</a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>ID</td>
                            <td>{{ entity.id }}</td>                        
                        </tr>
                        <tr>
                            <td>用户名</td>
                            <td>{{ entity.username }}</td>                        
                        </tr>
                        <tr>
                            <td>用户角色</td>
                            <td>
                                {% if entity.role is defined and entity.role %}
                                {{ entity.role.name }}
                                {% endif %}
                            </td>                        
                        </tr>
                        <tr>
                            <td>显示名称</td>
                            <td>{{ entity.showname }}</td>                        
                        </tr>
                        <tr>
                            <td>创建时间</td>
                            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>                        
                        </tr>
                        <tr>
                            <td>更新时间</td>
                            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>                        
                        </tr>                    
                    </tbody>
                </table>
                {{ form_delete(delete_form, entity.id) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
